{
  "name": "desktop",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "dev:watch": "cross-env NODE_ENV=development nodemon --exec \"electron .\" --watch main.js",
    "build:play": "cd ../play && npm run build",
    "package": "npm run build:play && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.seu-projeto.app",
    "productName": "Meu App Desktop",
    "files": [
      "main.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../play/dist",
        "to": "play-dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
